{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "preserve",
    "skipLibCheck": true,
    "composite": false,
    "lib": ["esnext", "dom"],
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "extends": "../../tsconfig.package.json",
  "include": ["./src/**/*"]
}
