{
  "name": "front-next",
  "version": "0.0.1",
  "private": true,
  "description": "@comunion/ frontend packages",
  "keywords": [
    "comunion"
  ],
  "repository": "@comunion/-io/front-next",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "postinstall": "husky install",
    "docs": "pnpm --filter @comunion/docs docs:dev",
    "dev:utils": "pnpm --filter @comunion/utils dev",
    "dev:hooks": "pnpm --filter @comunion/hooks dev",
    "dev:components": "pnpm --filter @comunion/components dev",
    "dev:web": "pnpm --filter @comunion/web dev",
    "dev": "run-s build:icon build:utils build:hooks build:components && npm run dev:web",
    "build:icon": "pnpm --filter @comunion/icons build",
    "build:utils": "pnpm --filter @comunion/utils build",
    "build:hooks": "pnpm --filter @comunion/hooks build",
    "build:components": "pnpm --filter @comunion/components build",
    "build:web:dev": "pnpm --filter @comunion/web build:dev",
    "build:web:release": "pnpm --filter @comunion/web build:release",
    "build:web:prod": "pnpm --filter @comunion/web build:prod",
    "build:homepage:dev": "pnpm --filter @comunion/homepage build:dev",
    "build:homepage:release": "pnpm --filter @comunion/homepage build:release",
    "build:homepage:prod": "pnpm --filter @comunion/homepage build:prod",
    "prepare-build": "run-s build:utils build:icon build:hooks build:components",
    "build:dev": "run-s build:utils build:icon build:hooks build:components && run-p build:homepage:dev build:web:dev",
    "build:release": "run-s build:utils build:icon build:hooks build:components && run-p build:homepage:release build:web:release",
    "build:prod": "run-s build:utils build:icon build:hooks build:components && run-p build:homepage:prod build:web:prod",
    "clear:dist": "rm -rf packages/*/dist",
    "fix:contracts": "prettier ./packages/web/src/contracts --write",
    "gen:component": "ts-node scripts/generate.ts component",
    "gen:contract": "ts-node scripts/generate.ts contract && npm run fix:contracts",
    "gen:api": "pnpm --filter @comunion/web run gen:api && prettier packages/web/src/services --write",
    "stylint": "stylelint \"packages/*/src/**/*.{css,less,scss,sass,styl}\" --fix",
    "jslint": "eslint ./ --fix",
    "lint": "run-s stylint jslint"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.179",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "devmoji": "^2.3.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^10.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "ora": "^6.1.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.3",
    "stylelint-config-css-modules": "^3.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "stylelint-order": "^5.0.0",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "timeago.js": "^4.0.2"
  }
}
